- model_class = Beat
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @beat.name
%p
  %strong= model_class.human_attribute_name(:owner) + ':'
  %br
  = @beat.owner
%p
  %strong= model_class.human_attribute_name(:media) + ':'
  %br
  = @beat.media

= render '/shared/player'

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), beats_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_beat_path(@beat), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), beat_path(@beat), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
